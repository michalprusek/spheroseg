# Frontend Environment Variables Example
# Copy this file to .env and update with your values

# API Configuration
VITE_API_URL=http://localhost:5001
VITE_API_BASE_URL=/api
VITE_ASSETS_URL=http://localhost:8080

# Logging Configuration
# Log Levels: DEBUG, INFO, WARN, ERROR, NONE
# Production default: INFO, Development default: DEBUG
VITE_LOG_LEVEL=INFO
VITE_ENABLE_CONSOLE_LOGS=true
VITE_ENABLE_LOG_SHIPPING=false
VITE_MAX_MEMORY_LOGS=1000
VITE_LOG_SERVER_ENDPOINT=/api/logs
VITE_LOG_SHIP_INTERVAL=30000

# Performance Monitoring (optional)
# Set to 'true' to enable sending performance metrics to backend
VITE_ENABLE_PERFORMANCE_METRICS=false
VITE_ENABLE_FRONTEND_METRICS=false
VITE_ENABLE_WEB_VITALS_METRICS=false
VITE_ENABLE_IMAGE_METRICS=false

# Error Monitoring (optional)
# Set to 'true' to enable error monitoring in development
VITE_ENABLE_ERROR_MONITORING=false

# Application Version
VITE_APP_VERSION=1.0.0