{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "types": ["node", "jest"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@spheroseg/types": ["../types/src"],
      "@spheroseg/shared": ["../shared/src"]
    },
    "moduleResolution": "node",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "isolatedModules": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/testing/**",
    "**/examples/**"
  ]
}